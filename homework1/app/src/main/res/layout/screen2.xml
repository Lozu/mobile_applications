<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/screen1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-70dp"
        android:layout_marginBottom="80dp"
        android:text="Get started"
        android:textSize="40sp"

        app:layout_constraintBottom_toBottomOf="@id/image2"
        app:layout_constraintEnd_toEndOf="@id/image2"
        app:layout_constraintStart_toStartOf="@id/image2" />

    <TextView
        android:text="by creating a free account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="-50dp"
        android:layout_marginBottom="50dp"

        app:layout_constraintEnd_toEndOf="@id/image2"
        app:layout_constraintStart_toStartOf="@id/image2"
        app:layout_constraintBottom_toBottomOf="@id/image2"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Full name"
        android:layout_marginBottom="270dp"
        android:background="@color/grey"
        android:textSize="24sp"
        android:layout_marginHorizontal="20dp"
        android:paddingStart="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image2" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Valid email"
        android:layout_marginBottom="170dp"
        android:background="@color/grey"
        android:textSize="24sp"
        android:layout_marginHorizontal="20dp"
        android:paddingStart="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image2" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Phone number"
        android:layout_marginBottom="75dp"
        android:background="@color/grey"
        android:textSize="24sp"
        android:layout_marginHorizontal="20dp"
        android:paddingStart="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image2" />

    <EditText
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Strong password"
        android:layout_marginBottom="-15dp"
        android:background="@color/grey"
        android:textSize="24sp"
        android:layout_marginHorizontal="20dp"
        android:paddingStart="15dp"
        android:ra="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image2" />

    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button4"/>

    <TextView
        android:text="By checking the box you agree to our Terms and Conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="12sp"

        app:layout_constraintStart_toEndOf="@id/checkbox2"
        app:layout_constraintTop_toBottomOf="@id/button4"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="20dp"
        android:text="Next >"
        android:backgroundTint="@color/purple"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:text="Already a member? Log in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>